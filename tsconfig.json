{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["**/*"],
  "typeRoots": ["node_modules/@types"],
  "types": ["node", "react"]
}